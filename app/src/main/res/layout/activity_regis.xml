<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/regis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regis_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingStart="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:onClick="Home"
                        android:clickable="true"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:id="@+id/textAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:onClick="About"
                        android:clickable="true"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:id="@+id/textNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="News"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:onClick="News"
                        android:clickable="true"
                        android:layout_marginEnd="15dp"/>

                    <TextView
                        android:id="@+id/textRegis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Regis"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:onClick="Regis"
                        android:clickable="true"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:id="@+id/textContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:onClick="Contact"
                        android:clickable="true"
                        android:layout_marginEnd="15dp" />

                    <SearchView
                        android:id="@+id/imageViewSearch"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="-10dp"
                        android:clickable="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textContact"
                        app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#52B6FF"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Join Us Now"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageRegist"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/image_regis" />

            <ImageView
                android:id="@+id/imageRegistForm"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="FormPertama"
                app:srcCompat="@drawable/form_pertama" />

            <ImageView
                android:id="@+id/imageRegistFormMaster"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:onClick="FormKedua"
                app:srcCompat="@drawable/form_kedua" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/alamatText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="SWISS GERMAN UNIVERSITY
        Alam Sutera Campus: The Prominence Tower Alam Sutera, Jl. Jalur Sutera Barat.No. 15, RT.003/RW.006, Panunggangan Tim., Kec. Pinang, Kota Tangerang, Banten 15143
        Phone: +6221 2977 9596/9597â€¨Fax +6221 2977 9598"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/logoSgu"
                    android:layout_width="109dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="250dp"
                    app:srcCompat="@drawable/logo_sgu_putih" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
